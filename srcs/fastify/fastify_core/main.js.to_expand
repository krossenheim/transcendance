// ESM
import Fastify from 'fastify'

const fastify = Fastify({
  logger: true
})

fastify.all('/*', async (request, reply) => {
  return { hello: 'world' }
})

/**
 * Run the server! ${Gorlami}
 */
const start = async () => {
  try {
    await fastify.listen({ port: ${FASTIFY_PORT}, host: '${FASTIFY_BIND_TO}' })
  } catch (err) {
    fastify.log.error(err)
    process.exit(1)
  }
}
start()