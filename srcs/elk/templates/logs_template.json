{
  "index_patterns": ["logs-*"],
  "priority": 500,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "index.lifecycle.name": "logs_policy",
      "index.lifecycle.rollover_alias": "logs-write"
    },
    "mappings": {
      "properties": {
        "@timestamp": { "type": "date" },
        "message": { "type": "text" },
        "log": {
          "properties": {
            "level": { "type": "keyword" }
          }
        },
        "host": {
          "properties": {
            "name": { "type": "keyword" }
          }
        },
        "agent": {
          "properties": {
            "name": { "type": "keyword" }
          }
        },
        "service": {
          "properties": {
            "name": { "type": "keyword" }
          }
        },
        "geoip": {
          "properties": {
            "location": { "type": "geo_point" }
          }
        }
      }
    }
  }
}
