{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "verbatimModuleSyntax": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "paths": {
            "@app/shared": [
                "./src/index.ts"
            ],
            "@app/shared/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}